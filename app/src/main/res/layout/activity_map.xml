<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="当前地位城市"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/local_adress"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:gravity="center"
            android:background="#32B9AA"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:layout_marginLeft="20dp"
        android:background="#E3E3E3"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        >

        <TextView
            android:id="@+id/hot_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门城市"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            />

        <Button
            android:id="@+id/beijing"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:text="北京"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/hot_city"
            android:layout_marginLeft="20dp"
            />
        <Button
            android:id="@+id/chengdu"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:text="成都"
            android:layout_marginTop="27dp"
            android:layout_toRightOf="@id/beijing"
            android:layout_marginLeft="20dp"
            />
        <Button
            android:id="@+id/chongqing"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:text="重庆"
            android:layout_marginTop="27dp"
            android:layout_toRightOf="@id/chengdu"
            android:layout_marginLeft="20dp"
            />
        <Button
            android:id="@+id/guangzhou"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/beijing"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:text="广州"
            android:background="#ffffff"
            />
        <Button
            android:id="@+id/hangzhou"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/guangzhou"
            android:layout_below="@id/chengdu"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:text="杭州"
            android:background="#ffffff"
            />

        <Button
            android:id="@+id/nanjing"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/hangzhou"
            android:layout_below="@id/chongqing"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:text="南京"
            android:background="#ffffff"
            />

        <Button
            android:id="@+id/shanghai"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/guangzhou"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:text="上海"
            android:background="#ffffff"
            />

        <Button
            android:id="@+id/sengzhen"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/shanghai"
            android:layout_below="@id/hangzhou"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:text="深圳"
            android:background="#ffffff"
            />

        <Button
            android:id="@+id/tianjin"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/sengzhen"
            android:layout_below="@id/nanjing"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:text="天津"
            android:background="#ffffff"
            />

        <Button
            android:id="@+id/wuhan"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/shanghai"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:text="武汉"
            android:background="#ffffff"
            />

        <Button
            android:id="@+id/xi_an"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/wuhan"
            android:layout_below="@id/sengzhen"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:text="西安"
            android:background="#ffffff"
            />




    </RelativeLayout>



</LinearLayout>